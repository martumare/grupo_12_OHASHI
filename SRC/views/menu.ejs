<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include('partials/head.ejs')%>
        <link rel="stylesheet" href="/css/menu.css">
        <title>OHASHI</title>
    </head>
  <body>
    <%-include('partials/header.ejs')%>

    <section class="carta-menu">
      <div class="container-titulo">
        <h1 class="titulo-carta">CARTA</h1>
      </div>

      <% data.forEach((plato) => { %>

      <article class="plato">
        <a href="">
          <div class="container-imagen" >
            <img class="imagen-carta" src="/images/imagenes-platos/<%= plato.image ? plato.image : 'default.jpg' %>" alt="Plato NÂ°<%= plato.id %>">
          </div>
          <div class="container-descripcion">
            <p class="nombre-producto"><%= plato.name %></p>
            <p class="descripcion-producto"><%= plato.description %></p>
            <p class="precio-producto">$<%= plato.price %></p>
          </div>
        </a>  
      </article>

      <% }) %>
      
    </section>

    <div class="container-pedir-reservar">
      <a href="/products/pedir">
        <div class="pedir">
          <p>PEDIR</p>
          <i class="arroz fa-solid fa-bowl-rice"></i>
        </div>
      </a>
      
      <a href="/products/reservar">
        <div class="reservar">
          <p>RESERVAR</p>
          <i class="libro fa-solid fa-book"></i>
        </div>
      </a>  
    </div>
    <%-include('partials/footer.ejs')%>
  </body>
</html>
