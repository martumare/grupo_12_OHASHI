    <%-include('partials/header.ejs')%>
    <main>
        <div class="product-container">
            <article>
              <img src="/images/imagenes-platos/<%= plato.image ? plato.image : 'default.jpg' %>" alt="Plato NÂ°<%= plato.id %>"/>
